<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Add Comp off</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <%= form_with(model: [:employee, comp_off], id: 'compOffs', local: false, remote: true) do |form| %>
      <div class="modal-body">
        <%= form.hidden_field :employee_id, value: current_employee.id %>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <%= form.label :for_date %>
              <%= form.date_field :for_date, class: "form-control form-control-lg datepicker", id: "datepicker", max: Date.today %>
              <% comp_off.errors.full_messages_for(:for_date).each do |message| %>
                <div class="text-danger"><%= message %></div>
              <% end %>
            </div>
            <div class="form-group">
              <%= form.label :check_in %>
              <%= form.text_field :check_in, class: "form-control form-control-lg datepicker", id: "datepicker" %>
              <% comp_off.errors.full_messages_for(:check_in).each do |message| %>
                <div class="text-danger"><%= message %></div>
              <% end %>
            </div>
            <div class="form-group">
              <%= form.label :check_out %>
              <%= form.text_field :check_out, class: "form-control form-control-lg datepicker", id: "datepicker" %>
              <% comp_off.errors.full_messages_for(:check_out).each do |message| %>
                <div class="text-danger"><%= message %></div>
              <% end %>
            </div>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control form-control-lg" %>
              <% comp_off.errors.full_messages_for(:description).each do |message| %>
                <div class="text-danger"><%= message %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= form.submit class: "btn btn-primary btn-lg ml-2" %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>
