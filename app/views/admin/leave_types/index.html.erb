<div class="col-lg-12">
  <p style="color: green"><%= notice %></p>

  <h1>Leave types</h1>

  <%= link_to "Create New Leave Type", new_admin_leave_type_path, class: "btn btn-primary btn-lg mb-4 mt-4 rounded-0" %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @leave_types.each_with_index do |leave_type, index| %>
        <tr>
          <td><%= index + 1  %></td>
          <td><%= leave_type.name_with_acronym %></td>
          <td>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><%= link_to "View", admin_leave_type_path(leave_type), class: "dropdown-item" %></li>
                <li><%= link_to "Edit", edit_admin_leave_type_path(leave_type), class: "dropdown-item" %></li>
                <li><%= link_to "Delete", admin_leave_type_path(leave_type), class: "dropdown-item", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this leave_type?" } %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>