<div class="container">
  <div class="col-xl-12 col-lg-6 col-md-6 col-sm-12 col-12 layout-spacing">
    <div class="widget widget-card-four">
      <div class="widget-content">
        <div class="w-header">
          <div class="w-info">
            <h6 class="value">Upcoming Birthdays</h6>
          </div>
        </div>
        <div class="w-content">
          <div class="w-info">
            <!-- Upcoming Birthdays -->
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Today's birthdays</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Tomorrow's birthdays</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Current week birthdays</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="pill-month-tab" data-bs-toggle="pill" data-bs-target="#pills-month" type="button" role="tab" aria-controls="pills-month" aria-selected="false">Current month birthdays</button>
              </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
              <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row">
                  <% @today_birthdays.each do |employee| %>
                  <div class="col-md-6 mt-2 mb-2">
                    <div class="card">
                      <div class="card-body">
                        <p class="card-text">
                          <p><strong>Employee Name : </strong> <%= employee.name %></p>
                          <p><strong>Date of Birth : </strong> <%= employee.date_of_birth %></p>
                        </p>
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>  
              </div>

              <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <div class="row">
                  <% @tomorrow_birthdays.each do |employee| %>
                  <div class="col-md-6 mt-2 mb-2">
                    <div class="card">
                      <div class="card-body">
                        <p class="card-text">
                          <p><strong>Employee Name : </strong> <%= employee.name %></p>
                          <p><strong>Date of Birth : </strong> <%= employee.date_of_birth %></p>
                        </p> 
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>  
              </div>

              <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                <div class="row">
                  <% @current_week_birthdays.each do |employee| %>
                  <div class="col-md-6 mt-2 mb-2">
                    <div class="card">
                      <div class="card-body">
                        <p class="card-text">
                          <p><strong>Employee Name : </strong> <%= employee.name %></p>
                          <p><strong>Date of Birth : </strong> <%= employee.date_of_birth %></p>
                        </p> 
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>  
              </div>

              <div class="tab-pane fade" id="pills-month" role="tabpanel" aria-labelledby="pills=month-tab">
                <div class="row">
                  <% @current_month_birthdays.each do |employee| %>
                  <div class="col-md-6 mt-2 mb-2">
                    <div class="card">
                      <div class="card-body">
                        <p class="card-text">
                          <p><strong>Employee Name : </strong> <%= employee.name %></p>
                          <p><strong>Date of Birth : </strong> <%= employee.date_of_birth %></p>
                        </p> 
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>
              </div>

            </div>


            
          </div>
        </div>
      </div>
    </div>
  </div> 
</div>

