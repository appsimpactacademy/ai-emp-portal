<div class="container mt-5 d-flex justify-content-center">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <div class="card-title">
          <h2 class="text-center">Forgot your password?</h2>
        </div>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "employees/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-2 rounded-0', placeholder: 'Enter Your Email Address' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary rounded-0 mt-3' %><br>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-primary rounded-0 mt-3' %><br>
          <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-primary rounded-0 mt-3'  %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>